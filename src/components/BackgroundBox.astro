---
interface Props {
  filter?: boolean | string
  [key: string]: any
}

const { filter = true, ...arg } = Astro.props
---

<div w-full h-full z--1 class:list={[arg]}>
  <div relative w-full h-full bg="[url(/images/bg.jpg)] center cover">
    <div
      w-full
      h-full
      class={filter
        ? typeof filter === 'string'
          ? filter
          : 'bg-[radial-gradient(rgba(0,0,0,0)_0,rgba(0,0,0,.5)_100%)]'
        : ``}
    >
    </div>

    <div w-full h-full absolute top-0 left-0>
      <slot />
    </div>
  </div>
</div>
