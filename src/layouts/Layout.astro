---
import '~/styles/global.css'

interface Props {
  title: string
  [key: string]: any
}

const { title, ...arg } = Astro.props
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Aistro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body w-screen h-screen relative m-0 box-border select-none class:list={[arg]}>
    <slot />
  </body>
</html>
